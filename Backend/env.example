# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/appzeto

# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/appzeto?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production
JWT_REFRESH_EXPIRE=30d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (if using email service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Appzeto <noreply@appzeto.com>"

# Admin registration safeguard
ADMIN_REGISTRATION_CODE=secure-code-to-create-admins
ADMIN_NOTIFICATION_EMAILS=admin1@example.com,admin2@example.com

# Razorpay Configuration
# For Test Mode: Use keys starting with rzp_test_...
# For Live Mode: Use keys starting with rzp_live_...
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Password reset configuration
PASSWORD_RESET_OTP_EXPIRY_MINUTES=10
PASSWORD_RESET_MAX_ATTEMPTS=5
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=30

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=5
# Set to 'true' to use default OTP (123456) for testing (development only)
USE_DEFAULT_OTP=true

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:5173

# Google Maps API Configuration
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

